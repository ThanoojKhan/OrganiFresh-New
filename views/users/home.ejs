<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center mb-3 pb-3">
      <div class="col-md-12 heading-section text-center ftco-animate">
        <h2 class="mb-4">New Products</h2>
        <p>100% Organic. For a healthier you. For A better self. For a great future.</p>
      </div>
    </div>   		
  </div>
  <div class="container">
    <div class="row">
      <% if(product.length>0){
        for(let i=0;i<8;i++){ %>
          <div class="col-md-6 col-lg-3 ftco-animate">
    				<div class="product">
    					<a href="/singleProduct?id=<%=product[i]._id%>" class="img-prod"><img class="img-fluid" src="/proImage/<%=product[i].image[0]%>" alt="Colorlib Template">
                <span class="status mt-1 ml-1 anim">New</span>
    						<div class="overlay"></div>
              </a>
    					<div class="text py-3 pb-4 px-3 text-center">
    						<h3><a href="/singleProduct?id=<%=product[i]._id%>"><%-product[i].title%></a></h3>
    						<div class="d-flex">
    							<div class="pricing">
		    						<p class="price"><span class="price-sale">Rs. <%-product[i].price%>/-</span></p>
		    					</div>
	    					</div>
	    					<div class="bottom-area d-flex px-3">
	    						<div class="m-auto d-flex">
	    							<a href="/addToCart?id=<%=product[i]._id%>" class="buy-now d-flex justify-content-center align-items-center mx-1">
	    								<span><i class="ion-ios-cart"></i></span>
	    							</a>
	    							<a href="/addToWishlist?id=<%=product[i]._id%>" class="heart d-flex justify-content-center align-items-center ">
	    								<span><i class="ion-ios-heart"></i></span>
	    							</a>
    							</div>
    						</div>
    					</div>
    				</div>
    			</div>
          <% } } %>
    </div>
  </div>
</section>

