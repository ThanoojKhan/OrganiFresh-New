<style>
  
* {
  box-sizing: border-box;
}







body {
  font-family: sans-serif;
  background: white;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
}

input {
  outline: none;
  border: none;
  background: transparent;
}

.user-box {
  position: relative;
  margin-bottom: 2rem;
}

.user-box label {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 1rem;
  color: #999;
  pointer-events: none;
  transition: 0.2s ease-out;
}

.user-box input:focus + label,
.user-box input:valid + label {
  top: -1.5rem;
  left: 0;
  font-size: 0.8rem;
  color: #333;
}

.user-box input {
  width: 100%;
  padding: 0.5rem 0;
  font-size: 1rem;
  border: none;
}

.login-box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400px;
  padding: 40px;
  transform: translate(-50%, -50%);
  background: linear-gradient(#dcc698, rgba(20, 104, 20, 0.63));
  box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
  border-radius: 10px;
}

.login-box h2 {
  margin: 0 0 30px;
  padding: 0;
  color: #000000;
  text-align: center;
}

.login-box .user-box {
  position: relative;
}

.login-box .user-box label {
  position: absolute;
  top: 0;
  left: 0;
  padding: 10px 0;
  color: #030303;
  transition: 500ms;
  font-size: 16px;
  pointer-events: none;
}

.login-box .user-box .input {
  width: 100%;
  padding: 10px 0;
  color: #fff;
  margin-bottom: 30px;
  border-bottom: 1px solid #fff;
}

.input:active ~ label {
  top: -20px;
  color: #bacbcc;
  font-size: 12px;
 }

.input:focus ~ label {
 top: -20px;
 color: #d7e3e4;
 font-size: 12px;
}

.input:valid ~ label  {
  top: -20px;
  color: #c9d7d8;
  font-size: 12px;
 }


.login-box form a {
  position: relative;
  display: inline-block;
  padding: 10px 20px;
  font-size: 16px;
  text-decoration: none;
  text-transform: uppercase;
  overflow: hidden;
  transition: all .5s;
  margin-top: 40px;
  letter-spacing: 4px;
  color: #000000;
}

.login-box a:hover {
  background-color: #c5cfcf;
  color: #000000;
  border-radius: 5px;
  box-shadow: 0 0 5px #606768,
              0 0 25px #606768,
              0 0 50px #606768,
              0 0 100px #606768;
}

.login-box a span {
  position: absolute;
  display: block;
}

@keyframes btnAnimA {
  0% {
    left: -100%;
  }
  50% {
    left: 100%;
  }
  100% {
    left: 100%;
  }
}
.login-box a span:nth-child(1) {
  top: 0;
  left: -100%;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, #606768);
  animation: btnAnimA 1500ms linear infinite;
  /* animation-delay: 200ms; */
  animation-fill-mode: backwards;
  animation-play-state: running;
}


@keyframes btnAnimB {
  0% {
    top: -100%
  }
  50% {
    top: 100%;
  }
  100% {
    top: 100%;
  }
}
.login-box a span:nth-child(2) {
  top: -100%;
  right: 0;
  width: 2px;
  height: 100%;
  background: linear-gradient(180deg, transparent, #606768);
  animation: btnAnimB 1500ms linear infinite;
  animation-delay: 300ms;
}


@keyframes btnAnimC {
  0% {
    right: -100%;
  }
  50% {
    right: 100%;
  }
  100% {
    right: 100%;
  }
}
.login-box a span:nth-child(3) {
  bottom: 0;
  right: -100%;
  width: 100%;
  height: 2px;
  background: linear-gradient(270deg, transparent, #606768);
  animation: btnAnimC 1500ms linear infinite;
  animation-delay: 600ms;
}


@keyframes btnAnimD {
  0% {
    bottom: -100%;
  }
  50%,100% {
    bottom: 100%;
  }
}
.login-box a span:nth-child(4) {
  left: 0;
  bottom: -100%;
  width: 2px;
  height: 100%;
  background: linear-gradient(360deg, transparent, #606768);
  animation: btnAnimD 1500ms linear infinite;
  animation-delay: 900ms;
} 
</style>



<div class="login-box">
  <h2>Signup</h2>
  <form action="/signup" class="form" method="post" id="form1">
    <div class="user-box">
      <input name="username" class="input" type="text" id="username">
      <label class="label" for="">Username</label>
    </div>
    <!-- /.user-box -->
    <div class="user-box">
      <input class="input" type="email" name="email" id="email">
      <label class="label" for="">Email</label>
    </div>
    <!-- /.user-box -->
    <div class="user-box">
      <input class="input" type="tel" name="phone" id="phone">
      <label class="label" for="">Mobile Number</label>
    </div>
    <!-- /.user-box -->
    <div class="user-box">
      <input class="input" type="password" name="password" id="password">
      <label class="label" for="">Password</label>
    </div>
    <!-- /.user-box -->
    <div class="user-box">
      <input class="input" type="password" name="Rpassword" id="Rpassword">
      <label class="label" for="">Confirm Password</label>
    </div>
    <!-- /.user-box -->

    <% if(typeof message!='undefined' ||typeof msg!='undefined' ){ %>
      <small class="mt-2 d-flex justify-content-center text-success txt-style">
        <%= message %>
      </small>
      <small class="d-flex justify-content-center text-danger txt-style">
        <%= msg %>
      </small>
      <% } %>
    <button type="submit">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      Register
    </button><br>
    
    
    <a href="/login">
      Back To Login
    </a>
  </form>
 <!-- /form -->

 
</div>
<!-- /.login-box -->


<script>
  const form = document.getElementById("form1");
  const username = document.getElementById("username");
  const email = document.getElementById("email");
  const phone = document.getElementById("phone");
  const password = document.getElementById("password");
  const Rpassword = document.getElementById("Rpassword");

  form.addEventListener("submit", (event) => {
    event.preventDefault();

    if (username.value.trim() === "") {
      showError(username, "Username is required");
    } else if (username.value.trim().length < 4) {
      showError(username, "Username must be at least 4 characters long");
    } else {
      showSuccess(username);
    }

    if (email.value.trim() === "") {
      showError(email, "Email is required");
    } else if (!isValidEmail(email.value.trim())) {
      showError(email, "Invalid email address");
    } else {
      showSuccess(email);
    }

    if (phone.value.trim() === "") {
      showError(phone, "Mobile number is required");
    } else if (!isValidPhone(phone.value.trim())) {
      showError(phone, "Invalid mobile number");
    } else {
      showSuccess(phone);
    }

    if (password.value.trim() === "") {
      showError(password, "Password is required");
    } else if (password.value.trim().length < 8) {
      showError(password, "Password must be at least 8 characters long");
    } else {
      showSuccess(password);
    }

    if (Rpassword.value.trim() === "") {
      showError(Rpassword, "Confirm password is required");
    } else if (Rpassword.value.trim() !== password.value.trim()) {
      showError(Rpassword, "Passwords do not match");
    } else {
      showSuccess(Rpassword);
    }
  });

  function showError(input, message) {
    const formControl = input.parentElement;
    formControl.className = "user-box error";
    const small = formControl.querySelector("small");
    small.innerText = message;
  }

  function showSuccess(input) {
    const formControl = input.parentElement;
    formControl.className = "user-box success";
  }

  function isValidEmail(email) {
    const regex = /\S+@\S+\.\S+/;
    return regex.test(email);
  }

  function isValidPhone(phone) {
    const regex = /^\d{10}$/;
    return regex.test(phone);
  }
</script>
