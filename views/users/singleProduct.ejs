<%- include('../layouts/userHeader.ejs') %>

<div class="hero-wrap hero-bread" style="background-image: url('images/bg_1.jpg');">
    <div class="container">
      <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span>
          <h1 class="mb-0 bread"><%=product.title %></h1>
        </div>
      </div>
    </div>
  </div>

  <section class="ftco-section">
      <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 ftco-animate">
                    <a href="/proImage/<%=product.image[0]%>" class="image-popup"><img src="/proImage/<%=product.image[0]%>"
                            class="img-fluid" alt="OrganiFresh"></a>
                    <div class="d-flex justify-content-center">
                        <div class="col-lg-4 mt-4 ftco-animate">
                            <a href="/proImage/<%=product.image[1]%>" class="image-popup"><img style="width: 200px;"
                                    src="/proImage/<%=product.image[1]%>" class="img-fluid" alt="OrganiFresh"></a>
                        </div>
                        <div class="col-lg-4 mt-4 ftco-animate">
                            <a href="/proImage/<%=product.image[2]%>" class="image-popup"><img style="width: 200px;"
                                    src="/proImage/<%=product.image[2]%>" class="img-fluid" alt="OrganiFresh"></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                    <h3><%=product.title %></h3>
                    <p class="price"><span>â‚¹ <%= product.price %></span></p>
                    <h5>Brand: <%= product.brand %></h5>
                    <p><%= product.description %></p>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="form-group d-flex">
                      <div class="select-wrap">
                    </div>
                    </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="input-group col-md-6 d-flex mb-3">
                     </span>
                  </div>
                  <div class="w-100"></div>
                  <div class="col-md-12">
                    <% if(product.stocks>0) {%>  
                    <p style="color: #000;">Stock : &nbsp; Available</p>
                    <% } else{ %>
                    <p style="color: #000;">Stock : <%=product.stocks%></p>
                    <% } %>
                  </div>
              </div>
              <div class="d-flex justify-content-right ">
              <p><a href="/addToCart?id=<%=product._id%>" class="btn btn-black py-3 px-4">Add to Cart &nbsp; <i class="ion-ios-cart"></i></a></p>&nbsp;
              <p><a href="/addToWishlist?id=<%=product._id%>" class=" btn btn-danger py-3 px-5"><i class="ion-ios-heart"></i>
              </a></p></div>
                </div>
          </div>
      </div>
  </section>
  <%if(msg!=null){%>
    <script>
        new Swal({
            title: "",
            text: "<%=msg%>",
            icon: "error",
            showConfirmButton: false,
            timer: 2000
        });
    </script>
    <%}%>
    <%if(message!=null){ %>
      <script>
          new Swal({
              title: "Success",
              text: "<%=message%>",
              icon: "success",
              showConfirmButton: false,
              timer: 2000
          });
      </script>
      <%}%>

<%- include('../layouts/userFooternull.ejs') %>